{
  "compilerOptions": {
    "target": "ES2021",                  
    "module": "CommonJS",                
    "rootDir": "src",                    
    "outDir": "dist",                    
    "strict": true,                      
    "esModuleInterop": true,             
    "skipLibCheck": true,                
    "forceConsistentCasingInFileNames": true,
    "typeRoots": ["./src/types", "./node_modules/@types"], 
    "resolveJsonModule": true            
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}